# Environment Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# PostgreSQL for bidding system
DATABASE_URL=postgresql://user:password@localhost:5432/auctionme

# MongoDB for authentication and payment system
MONGODB_URI=mongodb://localhost:27017/auctionme

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@auctionme.com

# Campus Email Domain
CAMPUS_EMAIL_DOMAIN=@university.edu

# Application URL
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Mobile Money API Configuration (for payment & escrow system)
MOBILE_MONEY_API_KEY=your-mobile-money-api-key
MOBILE_MONEY_API_SECRET=your-mobile-money-api-secret
MOBILE_MONEY_WEBHOOK_SECRET=your-webhook-secret
MOBILE_MONEY_BASE_URL=https://api.mobilemoney.com/v1
